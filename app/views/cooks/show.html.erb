<div>
  <%= render 'shared/meal_pop_up' %>
</div>

<!-- DESCRIPTION SECTION -->
<div class='cook-detail-container'>

</div>
<!-- DESCRIPTION SECTION -->

<div class='global-container container'>
  <div class='row'>

    <!-- MEAL CARDS CONTAINER -->
    <div class='col-lg-8 col-md-7 meal-cards-container'>

      <% @categories.each do |category| %>

        <h2 class='col-lg-12 category-title'><%= category.name %></h2>

        <% category.meals.each do |meal| %>

          <div class='col-lg-6 meal-card-container'>
            <div data-id='<%= meal.id %>'  class='meal-card white-card-border flex-row-sb-center'>
              <%= render partial: 'shared/meal_card_content', locals: {meal: meal} %>
            </div>
          </div>

        <% end %>
      <% end %>

    </div>
    <!-- MEAL CARDS CONTAINER -->

    <!-- BASKET CONTAINER -->
    <div class='col-lg-4 col-md-5'>
      <!-- Début du panier -->
      <div data-id='<%= @basket.id %>' class='white-card-shadow basket-card flex-column-sb-center'>
        <%= link_to '#', class: 'w-100' do %>
          <div class='red-btn w-100'>Valider mon panier</div>
        <% end %>

        <div class='basket-date-area flex-row-sb-center w-100'>
          <div>
            <p class='mb-2'>Jeudi 3 Mars </p>
            <p>De 18h jusqu’à 19h30</p>
          </div>
          <div class='small-btn'>Modifier</div>
        </div>

        <div class='basket-suborder-area flex-row-sb-center w-100'>
          <div class='flex-row-center-center'>
            <div class='very-light-grey-14'><i class="fas fa-minus-circle"></i></div>
            <p class='grey-16 basket-suborder-number flex-row-center-center'>3</p>
            <div class='very-light-grey-14'><i class="fas fa-plus-circle"></i></div>
            <div class='ml-3'>
              <p class='grey-medium-16'>Hamburger</p>
            </div>
          </div>
          <p class='grey-medium-16'>13 €</p>
        </div>

        <% @suborders.each do |suborder| %>
          <div class='basket-suborder-area flex-row-sb-center w-100'>
            <div class='flex-row-center-center'>
              <i class="fas fa-minus-circle very-light-grey-14"></i>
              <p class='grey-16 basket-suborder-number flex-row-center-center'>3</p>
              <i class="fas fa-plus-circle very-light-grey-14"></i>
              <div class='ml-3'>
                <p class='grey-medium-16 mb-2'><%= suborder.meal.name %></p>
                <p>4 personnes</p>
              </div>
            </div>
            <p class='grey-medium-16'><%= suborder.meal.price %></p>
          </div>
        <% end %>

        <div class='basket-total-area flex-row-sb-center w-100'>
          <p class='grey-medium-16'>Total</p>
          <p class='grey-medium-16'>16,00 €</p>
        </div>
      </div>
      <!-- Fin du panier -->
    </div>
    <!-- BASKET CONTAINER -->

  </div>
</div>

<%= javascript_pack_tag 'mealPopUp' do %>
  const idid = 3;
<% end %>
