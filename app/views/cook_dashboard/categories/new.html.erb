<div class='yellow-banner'>
  <div class='dashboard-container banner-title'>
    <h2>Ajouter une nouvelle recette</h2>
  </div>
</div>

<div class='dashboard-container page-lifted'>
  <div class='dashboard-card mt-0'>
    <div class='dashboard-card-header category-card flex-row-start-center'>
      <h3 class='dashboard-card-title white-font'>Détails</h3>
    </div>
    <div class='dashboard-card-body basket-form'>
      <div class=''>
        <%= simple_form_for @category, url: cook_dashboard_categories_path, method:'POST' do |f| %>
          <%= f.error_notification %>
          <%= f.input :name, label: 'Nom de la catégorie', placeholder: 'ex : ...',
              input_html: { class: 'details-form-item static-form-item flex-row-start-center' } %>
          <%= f.input :rank, collection: @cook.category_ranks_array(params[:action]),
                             label: 'Rang',
                             selected: @category.rank.nil? ? @cook.category_ranks_array(params[:action]).last : @cook.category_ranks_array(params[:action])[category.rank-1],
                             include_blank: false,
                             input_html: { class: 'details-form-item static-form-item flex-row-start-center',
                             value: @category.rank } %>
          <%= f.button :submit, class: 'red-btn-xl', value: 'Ajouter la catégorie', data: { disable_with: false } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
